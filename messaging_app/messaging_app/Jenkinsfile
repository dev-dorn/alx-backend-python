pipeline {
    agent {
        docker {
            image 'python:3.11'
            args '-u root:root'
        }
    }

    environment {
        GITHUB_CREDS = 'jenkins-ci-app-messagging-app'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/alx-backend-python/messaging_app.git',
                    credentialsId: "${GITHUB_CREDS}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest messaging_app/tests \
                        --junitxml=reports/pytest-results.xml \
                        --html=reports/pytest-report.html --self-contained-html
                '''
            }
        }

        stage('Publish Report') {
            steps {
                junit 'reports/pytest-results.xml'
                publishHTML(target: [
                    reportDir: 'reports',
                    reportFiles: 'pytest-report.html',
                    reportName: 'Pytest Report'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/*.xml, reports/*.html', fingerprint: true
        }
    }
}
